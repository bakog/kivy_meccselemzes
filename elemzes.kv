WindowManager:
    Start:
    Actions:
    Statisztika:


<Actions@GridLayout>:
    name: "actions"
    GridLayout:
        cols: 1
        spacing: (2,2)

        GridLayout:
            cols: 2
            rows: 2
            spacing: (2,2)
            Button:
                id: passz_jo_btn
                text: "Passz jó"
                background_color: (0,1,0,1)
                on_release: root.passz_jo_release()
            Button:
                id: passz_rossz_btn
                text: "Passz rossz"
                background_color: (1,0,0,1)
                on_release: root.passz_rossz_release()
            Button:
                text: "Csel jó"
                background_color: (0,1,0,1)
                on_release: root.csel_jo_release()
            Button:
                text: "Csel rossz"
                background_color: (1,0,0,1)
                on_release: root.csel_rossz_release()
        GridLayout:
            cols: 3
            spacing: (2,2)
            Button:
                text: "Labdaszerzés"
                background_color: (0,1,0,1)
                on_release: root.labdaszerzes_release()
            Button:
                text: "Becsúszás"
                background_color: (1,0,1,1)
                on_release: root.becsuszas_release()
            Button:
                text: "Lövés blokkolása"
                background_color: (1,1,0,1)
                on_release: root.blokk_release()
            Button:
                text: "Lövés (gól)"
                background_color: (0,1,0,1)
                on_release: root.loves_gol_release()
            Button:
                text: "Lövés (kapufa)"
                background_color: (0,1,1,1)
                on_release: root.loves_kapufa_release()
            Button:
                text: "Lövés (mellé)"
                background_color: (1,0,0,1)
                on_release: root.loves_melle_release()
        Button:
            text: "Vége"
            background_color: (0,1,0,1)
            size_hint: 0.5, 0.5
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"



<Start@GridLayout>:
    name: "start"
    GridLayout:
        cols: 1
        spacing: (2,2)
        padding: 100,100
        Label:
            text: "Az adatok rögzítéséhez kattintson a Start gombra"
        Button:
            id: start_btn
            text: "Start"
            size_hint: 0.5, 0.5
            on_release:
                app.root.current = "actions"
                root.manager.transition.direction = "left"
                root.start_btn()
        Label:
            text: "Az adatok megtekintéséhez a Statisztika gombra"
        Button:
            id: statisztika_btn
            text: "Statisztika"
            size_hint: 0.5, 0.5
            on_release:
                app.root.current = "statisztika"
                root.manager.transition.direction = "left"


<Statisztika@GridLayout>:
    name: "statisztika"
    GridLayout:
        cols: 1
        spacing: (2,2)
        GridLayout:
            cols: 2
            border: 1
            Label:
                text: "Sikeres passzok száma: "
            Label:
                text: root.passz_ok
            Label:
                text: "Sikertelen passzok száma: "
            Label:
                text: root.passz_false
            Label:
                text: "Összes passz száma: "
            Label:
                text: root.passz_number
            Label:
                text: "Sikeres passzok aránya: "
            Label:
                text: root.passz_ok_arany
            Label:
                text: "Sikeres cselek száma: "
            Label:
                text: root.csel_ok
            Label:
                text: "Sikertelen cselek száma: "
            Label:
                text: root.csel_false
            Label:
                text: "Sikeres cselek aránya: "
            Label:
                text: root.csel_ok_arany
            Label:
                text: "Labdaszerzések száma: "
            Label:
                text: root.labdaszerzes
            Label:
                text: "Becsúszások száma: "
            Label:
                text: root.becsuszas
            Label:
                text: "Lövések blokkolásának száma: "
            Label:
                text: root.blokk
            Label:
                text: "Lövések (gól) száma: "
            Label:
                text: root.loves_gol
            Label:
                text: "Lövések (kapufa) száma: "
            Label:
                text: root.loves_kapufa
            Label:
                text: "Lövések (mellé) száma: "
            Label:
                text: root.loves_melle
            Label:
                text: "Kapura menő lövések száma: "
            Label:
                text: root.loves_ok_arany

        Button:
            id: megnez_btn
            text: "Megnézem"
            size_hint: 0.5, 0.5
            on_release: root.megnez()
        Button:
            id: statisztika_btn
            text: "Vissza"
            size_hint: 0.5, 0.5
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"